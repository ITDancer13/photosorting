<mah:MetroWindow x:Class="PhotoSorting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:converter="clr-namespace:PhotoSorting.Converter"
        xmlns:userControls="clr-namespace:PhotoSorting.UserControls"
        xmlns:photoSorting="clr-namespace:PhotoSorting"
        mc:Ignorable="d"
        GlowBrush="{DynamicResource AccentColorBrush}"
        DataContext="{StaticResource MainViewModel}"
        BorderThickness="1"
        Title="RAW &amp; JPEG Photo Sorting" Height="1000" Width="1980">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <userControls:DirectorySelectionView Grid.Row="0" Grid.Column="0" />
        <userControls:ImageView Grid.Row="1" Grid.Column="0" />

    </Grid>

</mah:MetroWindow>
